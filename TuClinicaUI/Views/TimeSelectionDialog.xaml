<mah:MetroWindow x:Class="TuClinica.UI.Views.TimeSelectionDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Seleccionar Horario" Height="250" Width="350"
                 WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
                 WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Indique el horario para el justificante:" FontWeight="Bold" Margin="0,0,0,15"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Hora Entrada:" VerticalAlignment="Center"/>
        <mah:TimePicker Grid.Row="1" Grid.Column="1" x:Name="StartTimePicker" Margin="5" SelectedTimeFormat="Short"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Hora Salida:" VerticalAlignment="Center"/>
        <mah:TimePicker Grid.Row="2" Grid.Column="1" x:Name="EndTimePicker" Margin="5" SelectedTimeFormat="Short"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Generar" IsDefault="True" Click="AcceptButton_Click" Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}" Margin="0,0,10,0"/>
            <Button Content="Cancelar" IsCancel="True"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>