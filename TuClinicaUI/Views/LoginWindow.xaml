<mah:MetroWindow x:Class="TuClinica.UI.Views.LoginWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:TuClinica.UI.Views"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:viewmodels="clr-namespace:TuClinica.UI.ViewModels"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:converters="clr-namespace:TuClinica.UI.Converters" mc:Ignorable="d"

                 Title="INICIAR SESIÓN - CLÍNICA PD" Height="550" Width="497" 

                 WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}">

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Bienvenido" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Width="149"/>

        <TextBox Grid.Row="1"
                 mah:TextBoxHelper.Watermark="Nombre de Usuario"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14" Margin="0,0,0,10"/>

        <PasswordBox x:Name="PasswordBoxLogin" Grid.Row="2"
                     mah:TextBoxHelper.Watermark="Contraseña"
                     FontSize="14" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"
                   Margin="0,0,0,10"/>

        <Image Grid.Row="4"
               Source="/Assets/Logo_login.png" MaxHeight="150"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Grid.RowSpan="2" Height="213" Width="150" Margin="46,10,0,0" Stretch="UniformToFill"/>
        <Button Grid.Row="6"
                Content="Entrar"
                IsDefault="True"
                Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                FontSize="16"
                Command="{Binding LoginAsyncCommand}"
                CommandParameter="{Binding ElementName=PasswordBoxLogin}" Height="62"/>
    </Grid>

    <i:Interaction.Triggers>
        <i:DataTrigger Binding="{Binding CloseWindowFlag}" Value="True">
            <i:InvokeCommandAction Command="{Binding CloseWindowCommand}"
                                   CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        </i:DataTrigger>
    </i:Interaction.Triggers>

</mah:MetroWindow>