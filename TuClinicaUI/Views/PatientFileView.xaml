<UserControl x:Class="TuClinica.UI.Views.PatientFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:TuClinica.UI.Converters" 
             xmlns:controls="clr-namespace:TuClinica.UI.Views.Controls">

    <Grid>
        <Grid Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="99">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing IsActive="True"
                                  Width="50" Height="50"
                                  Foreground="White"/>
                <TextBlock 
                    Text="Cargando ficha del paciente..." 
                    Foreground="White" 
                    Margin="0,10,0,0" 
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#007ACC" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding CurrentPatient.PatientDisplayInfo}"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="15,10"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,10">
                    <TextBlock Text="SALDO TOTAL:" Foreground="White" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentBalance, StringFormat='{}{0:C}'}"
                               Foreground="{Binding CurrentBalance, Converter={StaticResource SaldoColorConverter}}"
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Documentación" Margin="0,0,10,0" Padding="10">
                    <StackPanel>
                        <Button Content="Nuevo Presupuesto" 
                                Command="{Binding NewBudgetCommand}"
                                Margin="0,0,0,8"/>
                        <Button Content="Imprimir Historial (PDF)"
                                Command="{Binding PrintHistoryCommand}" 
                                Margin="0,0,0,8"/>
                        <Border Height="1" Background="#DDDDDD" Margin="0,5"/>
                        <Button Content="Abrir Odontograma (Registro)"
                                Command="{Binding OpenOdontogramWindowCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                                Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <mah:MetroTabControl Grid.Column="1" Margin="5,0">

                    <mah:MetroTabItem Header="Datos Personales">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding CurrentPatient.Name}" Style="{StaticResource FichaTextBoxStyle}" 
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Apellidos:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding CurrentPatient.Surname}" Style="{StaticResource FichaTextBoxStyle}" 
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="DNI/NIE:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,10,20,10"/>
                                    <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding CurrentPatient.DniNie}" Style="{StaticResource FichaTextBoxStyle}" 
                                               IsReadOnly="{Binding IsPatientDataReadOnly}" Margin="0,10,0,10"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Teléfono:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <TextBox   Grid.Row="3" Grid.Column="1" Text="{Binding CurrentPatient.Phone, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FichaTextBoxStyle}"
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Email:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <TextBox   Grid.Row="4" Grid.Column="1" Text="{Binding CurrentPatient.Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FichaTextBoxStyle}"
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Dirección:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <TextBox   Grid.Row="5" Grid.Column="1" Text="{Binding CurrentPatient.Address, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FichaTextBoxStyle}"
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Notas Clínicas:" Style="{StaticResource FichaLabelStyle}" VerticalAlignment="Top" Margin="0,10,20,0"/>
                                    <TextBox   Grid.Row="6" Grid.Column="1" Text="{Binding CurrentPatient.Notes, UpdateSourceTrigger=PropertyChanged}" 
                                               Style="{StaticResource FichaTextBoxStyle}"
                                               TextWrapping="Wrap" MinHeight="100" AcceptsReturn="True"
                                               VerticalScrollBarVisibility="Auto"
                                               IsReadOnly="{Binding IsPatientDataReadOnly}"/>
                                </Grid>
                            </ScrollViewer>

                            <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Editar Datos" 
                                            Command="{Binding ToggleEditPatientDataCommand}"
                                            Visibility="{Binding IsPatientDataReadOnly, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Margin="0,0,10,0"/>

                                    <Button Content="Guardar Cambios" 
                                            Command="{Binding SavePatientDataAsyncCommand}"
                                            IsDefault="True"
                                            Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                                            Visibility="{Binding IsPatientDataReadOnly, Converter={StaticResource InverseBooleanConverter}}"/>

                                    <Button Content="Cancelar Edición"
                                            Command="{Binding ToggleEditPatientDataCommand}"
                                            Visibility="{Binding IsPatientDataReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                            Margin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </mah:MetroTabItem>

                    <mah:MetroTabItem Header="Odontograma" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                                <Button Content="Imprimir Odontograma (PDF)"
                                        Command="{Binding PrintOdontogramCommand}"
                                        Style="{StaticResource MahApps.Styles.Button.Square}"
                                        Margin="0,0,10,0"/>
                            </StackPanel>

                            <controls:OdontogramPreviewControl 
                                Grid.Row="1"
                                DataContext="{Binding OdontogramPreviewVM}"
                                Margin="5"/>

                            <StackPanel Grid.Row="2" Margin="0,30,0,0" HorizontalAlignment="Center">
                                <TextBlock Text="Leyenda de Colores:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,5">
                                        <Border Width="20" Height="20" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0"/>
                                        <TextBlock Text="Sano" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,5">
                                        <Border Width="20" Height="20" Background="Red" Margin="0,0,10,0"/>
                                        <TextBlock Text="Caries" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,5">
                                        <Border Width="20" Height="20" Background="#FFFF8000" Margin="0,0,10,0"/>
                                        <TextBlock Text="Extracción/Fractura" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" Margin="0,0,20,5">
                                        <Border Width="20" Height="20" Background="Transparent" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0"/>
                                        <TextBlock Text="Ausente" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,20,0">
                                        <Border Width="20" Height="20" Background="Blue" Margin="0,0,10,0"/>
                                        <TextBlock Text="Obturación/Restauración" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5,20,0">
                                        <Border Width="20" Height="20" Background="Gold" Margin="0,0,10,0"/>
                                        <TextBlock Text="Corona/Implante" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </mah:MetroTabItem>

                    <mah:MetroTabItem Header="Registro de Visita/Cargo" Padding="20">
                        <GroupBox Header="Registrar Cargo Rápido (Tratamiento o Concepto Manual)">
                            <StackPanel Margin="0,5,0,0">
                                <Label Content="Tratamiento/Concepto Predefinido:"/>
                                <ComboBox ItemsSource="{Binding AvailableTreatments}"
                                          DisplayMemberPath="Name"
                                          SelectedItem="{Binding SelectedManualTreatment}"
                                          mah:TextBoxHelper.Watermark="Selecciona tratamiento..."
                                          Margin="0,0,0,8"/>

                                <Label Content="Concepto/Diagnóstico (Si es manual):"/>
                                <TextBox Text="{Binding ManualChargeConcept, UpdateSourceTrigger=PropertyChanged}"
                                         mah:TextBoxHelper.Watermark="Ej: Consulta general, Empaste... (opcional)"
                                         Margin="0,0,0,8"/>

                                <Label Content="Precio (€):"/>
                                <mah:NumericUpDown Value="{Binding ManualChargePrice, UpdateSourceTrigger=PropertyChanged}"
                                                   Minimum="0" Interval="0.01"
                                                   StringFormat="C" Culture="es-ES"
                                                   Margin="0,0,0,12"/>

                                <Button Content="Registrar Cargo"
                                        Command="{Binding RegisterManualChargeAsyncCommand}"
                                        Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                                        IsEnabled="{Binding ManualChargePrice, Converter={StaticResource IsGreaterThanZeroConverter}}"/>
                            </StackPanel>
                        </GroupBox>
                    </mah:MetroTabItem>

                    <mah:MetroTabItem Header="Historial y Facturación" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Buscar en historial o pagos..."
                                     mah:TextBoxHelper.ClearTextButton="True"
                                     Margin="0,0,0,10" FontSize="14"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <GroupBox Grid.Row="0" Header="Historial Clínico (Cargos - Pendientes/Saldados)" Margin="0,0,5,5">
                                            <DataGrid ItemsSource="{Binding FilteredVisitHistory}"
                                                      SelectedItem="{Binding SelectedHistoryEntry, Mode=TwoWay}"
                                                      AutoGenerateColumns="False"
                                                      IsReadOnly="True"
                                                      CanUserAddRows="False"
                                                      SelectionMode="Single">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Fecha" Binding="{Binding VisitDate, StringFormat='dd/MM/yy'}" Width="70"/>
                                                    <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="80"/>
                                                    <DataGridTextColumn Header="Diagnóstico/Concepto" Binding="{Binding Diagnosis}" Width="*"/>
                                                    <DataGridTextColumn Header="Costo" Binding="{Binding TotalCost, StringFormat='{}{0:C}'}" Width="80"/>
                                                    <DataGridTextColumn Header="Saldo Pendiente" Binding="{Binding Balance, StringFormat='{}{0:C}'}" Width="100"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </GroupBox>

                                        <GroupBox Grid.Row="1" Header="Historial de Pagos (Abonos)" Margin="0,5,5,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <DataGrid Grid.Row="0" ItemsSource="{Binding FilteredPaymentHistory}"
                                                          SelectedItem="{Binding SelectedPayment, Mode=TwoWay}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True"
                                                          CanUserAddRows="False"
                                                          SelectionMode="Single">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Fecha" Binding="{Binding PaymentDate, StringFormat='dd/MM/yy'}" Width="70"/>
                                                        <DataGridTextColumn Header="Método" Binding="{Binding Method}" Width="90"/>
                                                        <DataGridTextColumn Header="Monto" Binding="{Binding Amount, StringFormat='{}{0:C}'}" Width="90"/>
                                                        <DataGridTextColumn Header="No Asignado" Binding="{Binding UnallocatedAmount, StringFormat='{}{0:C}'}" Width="*"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                                <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                    <Button Content="Registrar Nuevo Pago (Abono)"
                                                            Command="{Binding RegisterNewPaymentCommand}"
                                                            Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </Grid>

                                <GroupBox Grid.Column="1" Header="Asignación de Pagos" Margin="10,0,0,0" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Cargos Pendientes:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox ItemsSource="{Binding PendingCharges}"
                                                  DisplayMemberPath="Diagnosis"
                                                  SelectedItem="{Binding SelectedCharge, Mode=TwoWay}"
                                                  mah:TextBoxHelper.Watermark="Seleccionar cargo a pagar..."
                                                  Margin="0,0,0,10"/>

                                        <TextBlock Text="Pagos No Asignados:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox ItemsSource="{Binding UnallocatedPayments}"
                                                  DisplayMemberPath="UnallocatedAmount"
                                                  mah:TextBoxHelper.Watermark="Seleccionar pago para usar..."
                                                  SelectedItem="{Binding SelectedPayment, Mode=TwoWay}"
                                                  Margin="0,0,0,10"/>

                                        <Label Content="Monto a Asignar (€):"/>
                                        <mah:NumericUpDown Value="{Binding AmountToAllocate, Mode=TwoWay}"
                                                           Minimum="0" Interval="0.01"
                                                           StringFormat="C" Culture="es-ES"
                                                           Margin="0,0,0,20"/>

                                        <Button Content="Asignar Pago al Cargo"
                                                Command="{Binding AllocatePaymentCommand}"
                                                Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                <Button Content="Anterior"
                                        Command="{Binding PreviousPageCommand}"
                                        IsEnabled="{Binding CurrentPage, Converter={StaticResource IsGreaterThanZeroConverter}}"
                                        Style="{StaticResource MahApps.Styles.Button.Square}"
                                        Margin="0,0,10,0"/>

                                <TextBlock Text="{Binding CurrentPage}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="de" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TotalPages}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <Button Content="Siguiente"
                                        Command="{Binding NextPageCommand}"
                                        IsEnabled="{Binding HasNextPage}"
                                        Style="{StaticResource MahApps.Styles.Button.Square}"/>
                            </StackPanel>
                        </Grid>
                    </mah:MetroTabItem>
                </mah:MetroTabControl>
            </Grid>

            <StatusBar Grid.Row="2" Background="#F8F9FA" Padding="10,5">
                <StatusBarItem>
                    <TextBlock Text="Listo" FontWeight="SemiBold"/>
                </StatusBarItem>

                <StatusBarItem HorizontalAlignment="Right">
                    <Button Content="Eliminar Cargo Seleccionado"
                            Command="{Binding DeleteClinicalEntryAsyncCommand}"
                            Background="#E74C3C"
                            Foreground="White"
                            ToolTip="Elimina el cargo seleccionado del Historial Clínico (Pestaña 4)."/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>