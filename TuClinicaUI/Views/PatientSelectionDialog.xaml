<mah:MetroWindow x:Class="TuClinica.UI.Views.PatientSelectionDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:TuClinica.UI.Views"
              
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:viewmodels="clr-namespace:TuClinica.UI.ViewModels"
                 mc:Ignorable="d"
                 Title="Seleccionar Paciente" Height="500" Width="700"
                 WindowStartupLocation="CenterOwner"
                 d:DataContext="{d:DesignInstance Type=viewmodels:PatientSelectionViewModel}">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Margin="0,0,0,10" FontSize="14"
                 mah:TextBoxHelper.Watermark="Buscar por Nombre, Apellidos o Nº Documento..."
              
    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        <DataGrid Grid.Row="1" Margin="0,0,0,10" FontSize="14"
                  ItemsSource="{Binding SearchResults}"
                  SelectedItem="{Binding SelectedPatientFromList, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  SelectionMode="Single">

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ConfirmSelectionCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name, Mode=OneWay}" Width="*"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Surname, Mode=OneWay}" Width="2*"/>
                <DataGridTextColumn Header="Tipo Doc." Binding="{Binding DocumentType, Mode=OneWay}" Width="Auto"/>
                <DataGridTextColumn Header="Nº Documento" Binding="{Binding DocumentNumber, Mode=OneWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" IsCancel="True" Margin="0,0,10,0"/>

            <Button Content="Aceptar" IsDefault="True"
      
               Command="{Binding ConfirmSelectionCommand}"
                    Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>