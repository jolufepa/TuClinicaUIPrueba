<UserControl x:Class="TuClinica.UI.Views.Controls.ToothControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:TuClinica.UI.ViewModels"
             xmlns:converters="clr-namespace:TuClinica.UI.Converters" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=viewmodels:ToothViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TuClinica.UI;component/Assets/ToothGeometries.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:ToothNumberToGeometryConverter x:Key="ToothToGeoConverter"/>

            <converters:ToothNumberToTextGeometryConverter x:Key="ToothToTextConverter"/>

            <converters:AndBooleanToVisibilityConverter x:Key="AndBoolToVis"/>
            <converters:ConditionIsAusenteToVisibilityConverter x:Key="AusenteToVis"/>
            <converters:ConditionIsAusenteToVisibilityInverseConverter x:Key="AusenteToVisInverse"/>

            <DrawingBrush x:Key="AbsentPattern" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
                <DrawingBrush.Drawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="0,0" EndPoint="10,10" />
                                <LineGeometry StartPoint="0,10" EndPoint="10,0" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="#C0392B" Thickness="1.5" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingBrush.Drawing>
            </DrawingBrush>

            <Style x:Key="SurfacePathStyle" TargetType="Path">
                <Setter Property="Stroke" Value="#333333"/>
                <Setter Property="StrokeThickness" Value="0.5"/>
                <Setter Property="Fill" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="IsHitTestVisible" Value="True"/>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Fill" Value="#E0E0E0"/>
                        <Setter Property="Panel.ZIndex" Value="100"/>
                    </Trigger>

                    <DataTrigger Binding="{Binding FullCondition}" Value="Ausente">
                        <Setter Property="Fill" Value="{StaticResource AbsentPattern}"/>
                        <Setter Property="Stroke" Value="#C0392B"/>
                        <Setter Property="Opacity" Value="0.6"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding VestibularCondition}" Value="Caries">
                        <Setter Property="Fill" Value="#E74C3C"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding LingualCondition}" Value="Caries">
                        <Setter Property="Fill" Value="#E74C3C"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MesialCondition}" Value="Caries">
                        <Setter Property="Fill" Value="#E74C3C"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DistalCondition}" Value="Caries">
                        <Setter Property="Fill" Value="#E74C3C"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding OclusalCondition}" Value="Caries">
                        <Setter Property="Fill" Value="#E74C3C"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding VestibularCondition}" Value="Fractura">
                        <Setter Property="Fill" Value="#F1C40F"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding LingualCondition}" Value="Fractura">
                        <Setter Property="Fill" Value="#F1C40F"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MesialCondition}" Value="Fractura">
                        <Setter Property="Fill" Value="#F1C40F"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DistalCondition}" Value="Fractura">
                        <Setter Property="Fill" Value="#F1C40F"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding OclusalCondition}" Value="Fractura">
                        <Setter Property="Fill" Value="#F1C40F"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding VestibularCondition}" Value="ExtraccionIndicada">
                        <Setter Property="Fill" Value="#E67E22"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding LingualCondition}" Value="ExtraccionIndicada">
                        <Setter Property="Fill" Value="#E67E22"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MesialCondition}" Value="ExtraccionIndicada">
                        <Setter Property="Fill" Value="#E67E22"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DistalCondition}" Value="ExtraccionIndicada">
                        <Setter Property="Fill" Value="#E67E22"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding OclusalCondition}" Value="ExtraccionIndicada">
                        <Setter Property="Fill" Value="#E67E22"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding VestibularRestoration}" Value="Obturacion">
                        <Setter Property="Fill" Value="#3498DB"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding LingualRestoration}" Value="Obturacion">
                        <Setter Property="Fill" Value="#3498DB"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MesialRestoration}" Value="Obturacion">
                        <Setter Property="Fill" Value="#3498DB"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DistalRestoration}" Value="Obturacion">
                        <Setter Property="Fill" Value="#3498DB"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding OclusalRestoration}" Value="Obturacion">
                        <Setter Property="Fill" Value="#3498DB"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding VestibularRestoration}" Value="Sellador">
                        <Setter Property="Fill" Value="#2ECC71"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding LingualRestoration}" Value="Sellador">
                        <Setter Property="Fill" Value="#2ECC71"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MesialRestoration}" Value="Sellador">
                        <Setter Property="Fill" Value="#2ECC71"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DistalRestoration}" Value="Sellador">
                        <Setter Property="Fill" Value="#2ECC71"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding OclusalRestoration}" Value="Sellador">
                        <Setter Property="Fill" Value="#2ECC71"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding FullRestoration}" Value="Corona">
                        <Setter Property="Fill" Value="#F39C12"/>
                        <Setter Property="Stroke" Value="#D35400"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding FullRestoration}" Value="Implante">
                        <Setter Property="Fill" Value="#95A5A6"/>
                        <Setter Property="Stroke" Value="#7F8C8D"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding FullRestoration}" Value="Endodoncia">
                        <Setter Property="Fill" Value="#9B59B6"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding FullRestoration}" Value="ProtesisFija">
                        <Setter Property="Fill" Value="#C0392B"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding FullRestoration}" Value="ProtesisRemovible">
                        <Setter Property="Fill" Value="#E91E63"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid ClipToBounds="False" VerticalAlignment="Top" HorizontalAlignment="Left">

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseRightButtonDown">
                <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Completo"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid>
            <Grid.Visibility>
                <MultiBinding Converter="{StaticResource AndBoolToVis}">
                    <Binding Path="FullCondition" Converter="{StaticResource AusenteToVisInverse}"/>
                </MultiBinding>
            </Grid.Visibility>

            <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToGeoConverter}, ConverterParameter='Vestibular'}" 
                  ToolTip="Vestibular" Style="{StaticResource SurfacePathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Vestibular"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Path>
            <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToGeoConverter}, ConverterParameter='Lingual'}" 
                  ToolTip="Lingual" Style="{StaticResource SurfacePathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Lingual"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Path>
            <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToGeoConverter}, ConverterParameter='Mesial'}" 
                  ToolTip="Mesial" Style="{StaticResource SurfacePathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Mesial"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Path>
            <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToGeoConverter}, ConverterParameter='Distal'}" 
                  ToolTip="Distal" Style="{StaticResource SurfacePathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Distal"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Path>
            <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToGeoConverter}, ConverterParameter='Oclusal'}" 
                  ToolTip="Oclusal" Style="{StaticResource SurfacePathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding SurfaceClickCommand}" CommandParameter="Oclusal"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Path>
        </Grid>

        <Grid Visibility="{Binding FullCondition, Converter={StaticResource AusenteToVis}}" IsHitTestVisible="False">
            <Path Data="M 0,0 L 100,100 M 0,100 L 100,0" 
                  Stretch="Fill" Stroke="#C0392B" StrokeThickness="2.5" 
                  Opacity="0.85" Margin="10"/>
        </Grid>

        <Path Data="{Binding ToothNumber, Converter={StaticResource ToothToTextConverter}}"
              Fill="#34495E"
              IsHitTestVisible="False"
              Panel.ZIndex="1000"
              RenderTransformOrigin="0.5,0.5">
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
            </Path.RenderTransform>
        </Path>

    </Grid>
</UserControl>