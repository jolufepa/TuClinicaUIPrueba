<UserControl x:Class="TuClinica.UI.Views.Controls.OdontogramPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:ctrl="clr-namespace:TuClinica.UI.Views.Controls"
             xmlns:converters="clr-namespace:TuClinica.UI.Converters"
             Height="Auto" MinWidth="300">

    <UserControl.Resources>
        <converters:ToothListToPathConverter x:Key="ToothListToPathConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Odontograma" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <Button Content="Abrir completo" 
                    Command="{Binding OpenFullOdontogramCommand}"
                    HorizontalAlignment="Right"
                    Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                    Padding="10,2" FontSize="12"/>
        </DockPanel>

        <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,10" IsHitTestVisible="False">
            <Grid Width="300" Height="350">

                <ItemsControl ItemsSource="{Binding UpperArch}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrl:ToothControl DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding LowerArch}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrl:ToothControl DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding UpperConnectors}" IsHitTestVisible="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Stroke="{Binding ColorHex}" 
                                  StrokeThickness="1.0" 
                                  StrokeLineJoin="Round" 
                                  StrokeStartLineCap="Round" 
                                  StrokeEndLineCap="Round"
                                  Data="{Binding ToothSequence, Converter={StaticResource ToothListToPathConverter}}">
                                <Path.Effect>
                                    <DropShadowEffect Color="White" Opacity="0.4" BlurRadius="2" ShadowDepth="0"/>
                                </Path.Effect>
                            </Path>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding LowerConnectors}" IsHitTestVisible="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Stroke="{Binding ColorHex}" 
                                  StrokeThickness="1.0" 
                                  StrokeLineJoin="Round" 
                                  StrokeStartLineCap="Round" 
                                  StrokeEndLineCap="Round"
                                  Data="{Binding ToothSequence, Converter={StaticResource ToothListToPathConverter}}">
                                <Path.Effect>
                                    <DropShadowEffect Color="White" Opacity="0.4" BlurRadius="2" ShadowDepth="0"/>
                                </Path.Effect>
                            </Path>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>
        </Viewbox>

        <StackPanel Grid.Row="2" Margin="0,5,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Leyenda:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,2" HorizontalAlignment="Center"/>
            <WrapPanel HorizontalAlignment="Center">
                <Border Width="10" Height="10" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5,0"/>
                <TextBlock Text="Sano" FontSize="10" VerticalAlignment="Center" Margin="2,0,8,0"/>

                <Border Width="10" Height="10" Background="#E74C3C" Margin="0,0"/>
                <TextBlock Text="Caries" FontSize="10" VerticalAlignment="Center" Margin="2,0,8,0"/>

                <Border Width="10" Height="10" Background="#3498DB" Margin="0,0"/>
                <TextBlock Text="Rest." FontSize="10" VerticalAlignment="Center" Margin="2,0,8,0"/>

                <Border Width="10" Height="1.5" Background="#3498DB" Margin="0,4"/>
                <TextBlock Text="Puente" FontSize="10" VerticalAlignment="Center" Margin="2,0,8,0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>