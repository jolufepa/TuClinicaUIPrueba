<mah:MetroWindow x:Class="TuClinica.UI.Views.OdontogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuClinica.UI.Views"
        xmlns:vm="clr-namespace:TuClinica.UI.ViewModels"
        xmlns:ctrl="clr-namespace:TuClinica.UI.Views.Controls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Odontograma"
        Height="auto" Width="auto"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White"
        d:DataContext="{d:DesignInstance Type=vm:OdontogramViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20">

                <TextBlock Text="{Binding Patient.FullName, StringFormat='Odontograma de {0}'}"
                           FontSize="20" FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ItemsControl Grid.Row="0" Grid.Column="0" ItemsSource="{Binding TeethQuadrant1}" Margin="0,0,10,10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:ToothControl DataContext="{Binding}" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding TeethQuadrant2}" Margin="10,0,0,10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:ToothControl DataContext="{Binding}" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding TeethQuadrant4}" Margin="0,10,10,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:ToothControl DataContext="{Binding}" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding TeethQuadrant3}" Margin="10,10,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:ToothControl DataContext="{Binding}" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="Leyenda de Colores:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Width="20" Height="20" Background="Transparent" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Sano" VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <Border Grid.Row="1" Grid.Column="0" Width="20" Height="20" Background="Red" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Caries" VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <Border Grid.Row="2" Grid.Column="0" Width="20" Height="20" Background="Black" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Ausente" VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <Border Grid.Row="3" Grid.Column="0" Width="20" Height="20" Background="Blue" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Restauración" VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <Border Grid.Row="4" Grid.Column="0" Width="20" Height="20" Background="Yellow" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Tratamiento/Extracción Planificada" VerticalAlignment="Center" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Imprimir PDF"
                        Command="{Binding PrintCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                        Foreground="White"
                        mah:ControlsHelper.FocusBorderBrush="White"
                        mah:ControlsHelper.MouseOverBorderBrush="White"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Aceptar"
                            Command="{Binding AcceptCommand}"
                            IsDefault="True"
                            Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                            Margin="0,0,10,0"/>
                    <Button Content="Cancelar"
                            Command="{Binding CancelCommand}"
                            IsCancel="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>