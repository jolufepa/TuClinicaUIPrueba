<mah:MetroWindow x:Class="TuClinica.UI.Views.OdontogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuClinica.UI.Views"
        xmlns:vm="clr-namespace:TuClinica.UI.ViewModels"
        xmlns:ctrl="clr-namespace:TuClinica.UI.Views.Controls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Odontograma"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White"
        d:DataContext="{d:DesignInstance Type=vm:OdontogramViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Patient.FullName, StringFormat='Odontograma de {0}'}"
                   FontSize="22" FontWeight="Bold"
                   Margin="20"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0" Stretch="Uniform" Margin="0,0,20,0">
                <Grid Width="250" Height="350">
                    <ItemsControl ItemsSource="{Binding Odontogram}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:ToothControl DataContext="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Viewbox>

            <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Background="#F9F9F9">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Estado Actual de la Boca" 
                               FontWeight="Bold" FontSize="16" 
                               Foreground="#555555" Margin="0,0,0,10" 
                               HorizontalAlignment="Center"/>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding SummaryList}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    Background="{TemplateBinding Background}" 
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="" Width="30">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="12" Height="12" Fill="{Binding ColorIndicator}" Stroke="Gray" StrokeThickness="0.5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Diente" Binding="{Binding ToothNumber}" FontWeight="Bold" Width="Auto"/>

                            <DataGridTextColumn Header="Detalle" Binding="{Binding Description}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="1" Text="Sin patologías registradas." 
                               FontStyle="Italic" Foreground="Gray" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SummaryList.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="Leyenda:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Border Width="15" Height="15" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5,0"/>
                    <TextBlock Text="Sano" VerticalAlignment="Center"/>
                    <Border Width="15" Height="15" Background="#E74C3C" Margin="10,0,5,0"/>
                    <TextBlock Text="Caries" VerticalAlignment="Center"/>
                    <Border Width="15" Height="15" Background="#3498DB" Margin="10,0,5,0"/>
                    <TextBlock Text="Restauración" VerticalAlignment="Center"/>
                    <Border Width="15" Height="15" Background="#F1C40F" Margin="10,0,5,0"/>
                    <TextBlock Text="Fractura" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Imprimir PDF"
                            Command="{Binding PrintCommand}"
                            Style="{StaticResource MahApps.Styles.Button.Flat}"
                            Foreground="White"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Aceptar y Guardar"
                                Command="{Binding AcceptCommand}"
                                IsDefault="True"
                                Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"
                                Margin="0,0,10,0"/>
                        <Button Content="Cancelar"
                                Command="{Binding CancelCommand}"
                                IsCancel="True" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>