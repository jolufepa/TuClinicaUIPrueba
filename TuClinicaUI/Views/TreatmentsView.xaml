<UserControl x:Class="TuClinica.UI.Views.TreatmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TuClinica.UI.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewmodels="clr-namespace:TuClinica.UI.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:TreatmentsViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
            <!-- Damos más espacio a la columna de edición -->
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0"
                 ItemsSource="{Binding Treatments}"
                  SelectedItem="{Binding SelectedTreatment, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  FontSize="14" Margin="0,0,20,0">

            <DataGrid.Resources>
                <Style TargetType="TextBlock" x:Key="WrapTextStyle">
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Nombre" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource WrapTextStyle}"
                                       Text="{Binding Name}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Precio (€)" Binding="{Binding DefaultPrice, StringFormat=C, ConverterCulture='es-ES'}" Width="*"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding IsActive}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- === INICIO DE MODIFICACIÓN (Separar en 2 filas) === -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Formulario de Datos -->
                <RowDefinition Height="*" />
                <!-- Lista de Componentes del Pack -->
                <RowDefinition Height="Auto" />
                <!-- Botones de Acción -->
            </Grid.RowDefinitions>

            <!-- Panel de Datos del Tratamiento -->
            <StackPanel Grid.Row="0" IsEnabled="{Binding IsFormEnabled}">
                <Label Content="Datos del Tratamiento" FontSize="18" FontWeight="Bold"/>

                <Label Content="Nombre:"/>
                <TextBox Text="{Binding TreatmentFormModel.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <Label Content="Descripción (Opcional):"/>
                <TextBox Text="{Binding TreatmentFormModel.Description, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" MinHeight="60" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                <Label Content="Precio Predeterminado (€):"/>
                <mah:NumericUpDown Value="{Binding TreatmentFormModel.DefaultPrice, UpdateSourceTrigger=PropertyChanged}"
                                   Minimum="0" StringFormat="C" Culture="es-ES" Margin="0,0,0,10"/>

                <CheckBox Content="Tratamiento Activo"
                          IsChecked="{Binding TreatmentFormModel.IsActive}"
                          Margin="0,10,0,10"/>
            </StackPanel>

            <!-- === NUEVA SECCIÓN: GESTIÓN DE COMPONENTES DEL PACK === -->
            <GroupBox Grid.Row="1" Header="Componentes del Pack" 
                      Margin="0,15,0,0"
                      IsEnabled="{Binding IsFormEnabled}"
                      ToolTip="Añada tratamientos a este ítem para convertirlo en un 'Pack'. Si la lista está vacía, es un tratamiento individual.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Fila 1: Controles para añadir -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailableComponents}"
                                  SelectedItem="{Binding SelectedComponentToAdd}"
                                  DisplayMemberPath="Name"
                                  mah:TextBoxHelper.Watermark="Seleccionar componente..."
                                  Margin="0,0,5,0" />

                        <mah:NumericUpDown Grid.Column="1" 
                                           Value="{Binding ComponentQuantity}"
                                           Minimum="1" Interval="1" 
                                           Width="60" Margin="0,0,5,0" />

                        <Button Grid.Column="2" 
                                Content="Añadir"
                                Command="{Binding AddPackItemCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
                    </Grid>

                    <!-- Fila 2: Lista de componentes actuales -->
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding CurrentPackItems}"
                              Margin="0,10,0,0"
                              BorderThickness="1"
                              BorderBrush="LightGray"
                              d:ItemsSource="{d:SampleData}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Componente" DisplayMemberBinding="{Binding ChildTreatmentName}" Width="200" />
                                <GridViewColumn Header="Cant.">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <!-- Hacemos la cantidad editable directamente -->
                                            <mah:NumericUpDown Value="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                               Minimum="1" Interval="1" 
                                                               BorderThickness="0"
                                                               Width="60" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="Auto">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="X" 
                                                    Foreground="White" Background="IndianRed" 
                                                    Padding="4,1"
                                                    Command="{Binding DataContext.RemovePackItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </GroupBox>
            <!-- === FIN DE NUEVA SECCIÓN === -->

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Eliminar"
                        Command="{Binding DeleteTreatmentCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Nuevo"
                        Command="{Binding SetNewTreatmentFormCommand}"
                        Margin="0,0,10,0"/>

                <Button Content="Editar"
                        Command="{Binding EditTreatmentCommand}"
                         Margin="0,0,10,0"/>

                <Button Content="Guardar"
                        Command="{Binding SaveTreatmentCommand}"
                        IsEnabled="{Binding IsFormEnabled}"
                        IsDefault="True"
                         Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
            </StackPanel>
        </Grid>
        <!-- === FIN DE MODIFICACIÓN === -->
    </Grid>
</UserControl>